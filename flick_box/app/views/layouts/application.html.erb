<!DOCTYPE html>
<html>
<head>
  <title>FlickBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="login">
<% if current_user %>
  Signed in as <%= current_user.name %> | <%= link_to "Video Control Page", '/videos' %> | <%= link_to "Logout", '/logout' %>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
<% end %>

| <%= link_to 'Home', users_path %>
</div>

<div id="search-bar">
  <%= form_tag(videos_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Videos" %>
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
 </div>

<%= yield %>

</body>
</html>
